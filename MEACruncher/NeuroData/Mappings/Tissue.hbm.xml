<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MeaData" namespace="MeaData" auto-import="false">
  <class name="Tissue" table="tissues" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <property name="Description" column="Description" not-null="true" length="75"/>
      <many-to-one name="Parent" column="ParentId" not-null="false" />
    </natural-id>
    <property name="Comments" column="Comments" not-null="false" />
    <set name="TissuePreparations" table="TissuePreparations" lazy="extra" access="nosetter.camelcase-underscore" inverse="true" cascade="save-update">
      <key unique="true">
        <column name="TissueId" not-null="true"/>
      </key>
      <one-to-many class="TissuePreparation"/>
    </set>
    <set name="Children" table="Tissues" lazy="true" access="nosetter.camelcase-underscore" inverse="true" cascade="save-update">
      <key unique="true">
        <column name="ParentId" not-null="true"/>
      </key>
      <one-to-many class="Tissue"/>
    </set>
  </class>
</hibernate-mapping>