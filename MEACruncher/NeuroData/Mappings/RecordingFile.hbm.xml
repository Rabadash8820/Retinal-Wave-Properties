<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MeaData" namespace="MeaData" auto-import="false">
  <class name="RecordingFile" table="recording_files" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <many-to-one name="Recording" column="RecordingId" not-null="true"/>
      <property name="Number" column="FileNumber" not-null="true"/>
    </natural-id>
    <property name="FileDir" column="FileDir" not-null="true"/>
  </class>
</hibernate-mapping>