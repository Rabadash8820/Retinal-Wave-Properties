<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="NeuroData" namespace="Neuro" auto-import="false">
  <class name="Project" table="Projects" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <property name="Title" column="Title" not-null="true"/>
      <property name="DateStarted" column="DateStarted" not-null="true"/>
    </natural-id>
    <property name="Comments" column="Comments" not-null="false" />
    <set name="ProjectExperimenters" table="ProjectExperimenters" lazy="true" access="nosetter.camelcase-underscore" inverse="true" batch-size="10" cascade="save-update">
      <key unique="true">
        <column name="ProjectId" not-null="true"/>
      </key>
      <one-to-many class="ProjectExperimenter"/>
    </set>
    <set name="ProjectRecordings" table="ProjectRecordings" lazy="true" access="nosetter.camelcase-underscore" inverse="true" batch-size="10" cascade="save-update">
      <key unique="true">
        <column name="ProjectId" not-null="true"/>
      </key>
      <one-to-many class="ProjectRecording"/>
    </set>
  </class>
</hibernate-mapping>