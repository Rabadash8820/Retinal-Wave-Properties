<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MeaData" namespace="MeaData" auto-import="false">
  <class name="OrganizationRole" table="organization_roles" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <property name="Description" column="Description" not-null="true" length="50" />
    </natural-id>
    <set name="Affiliations" table="Affiliations" lazy="extra" access="nosetter.camelcase-underscore" inverse="true" cascade="save-update">
      <key unique="true">
        <column name="RoleId" not-null="true"/>
      </key>
      <one-to-many class="Affiliation"/>
    </set>
  </class>
</hibernate-mapping>