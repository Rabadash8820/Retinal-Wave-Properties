<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MeaData" namespace="MeaData" auto-import="false">
  <class name="ResultType" table="result_types" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <property name="Description" column="Description" not-null="true" length="50"/>
      <property name="Comments" column="Description" not-null="false"/>
    </natural-id>
    <set name="Results" table="results" lazy="true" access="nosetter.camelcase-underscore" inverse="true" batch-size="10" cascade="save-update">
      <key unique="true">
        <column name="ResultTypeId" not-null="true"/>
      </key>
      <one-to-many class="Result"/>
    </set>
  </class>
</hibernate-mapping>