<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="NeuroData" namespace="Neuro" auto-import="false">
  <class name="TissueCondition" table="tissue_conditions" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <many-to-one name="TissuePreparation" column="TissuePreparationId" not-null="true"/>
      <many-to-one name="Condition" column="ConditionId" not-null="true"/>
    </natural-id>
    <set name="Recordings" table="Recordings" lazy="true" access="nosetter.camelcase-underscore" inverse="true" batch-size="10" cascade="save-update">
      <key unique="true">
        <column name="TissueConditionId" not-null="true"/>
      </key>
      <one-to-many class="Recording"/>
    </set>
  </class>
</hibernate-mapping>