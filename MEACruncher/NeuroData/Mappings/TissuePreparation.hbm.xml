<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MeaData" namespace="MeaData" auto-import="false">
  <class name="TissuePreparation" table="tissue_preparations" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <many-to-one name="Population" column="PopulationId" not-null="true" />
      <property name="DatePrepared" column="DatePrepared" not-null="false" />
      <many-to-one name="Preparer" column="PreparerId" not-null="false" />
    </natural-id>
    <property name="Comments" column="Comments" not-null="false" />
    <set name="Recordings" table="Recordings" lazy="true" access="nosetter.camelcase-underscore" inverse="true" cascade="save-update">
      <key unique="true">
        <column name="TissuePreparationId" not-null="true"/>
      </key>
      <one-to-many class="Recording"/>
    </set>
  </class>
</hibernate-mapping>