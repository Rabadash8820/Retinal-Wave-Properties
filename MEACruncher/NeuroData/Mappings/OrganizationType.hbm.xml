<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="NeuroData" namespace="Neuro" auto-import="false">
  <class name="OrganizationType" table="organization_types" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <property name="Description" column="Description" not-null="true" length="50" />
    </natural-id>
    <set name="Organizations" table="Organizations" lazy="true" access="nosetter.camelcase-underscore" inverse="true" batch-size="10" cascade="save-update">
      <key unique="true">
        <column name="TypeId" not-null="true"/>
      </key>
      <one-to-many class="Organization"/>
    </set>
  </class>
</hibernate-mapping>