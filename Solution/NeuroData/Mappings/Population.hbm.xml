<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MeaData" namespace="MeaData" auto-import="false">
  <class name="Population" table="populations" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <many-to-one name="Tissue" column="TissueId" not-null="false"/>
      <many-to-one name="Strain" column="StrainId" not-null="false"/>
      <property name="Comments" column="Comments" not-null="false"/>
    </natural-id>
    <set name="Projects" table="project_populations" lazy="extra" access="nosetter.camelcase-underscore" inverse="true" cascade="save-update">
      <key unique="true" column="PopulationId" not-null="true"/>
      <many-to-many class="Project" column="ProjectId" />
    </set>
    <set name="TissuePreparations" table="population_preparations" lazy="extra" access="nosetter.camelcase-underscore" inverse="true" cascade="all">
      <key unique="true" column="PopulationId" not-null="true" />
      <many-to-many class="TissuePreparation" column="TissuePreparationId" />
    </set>
  </class>
</hibernate-mapping>