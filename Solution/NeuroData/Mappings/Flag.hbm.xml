<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MeaData" namespace="MeaData" auto-import="false">
  <class name="Flag" table="flags" dynamic-update="true">
    <id name="Guid" column="Id">
      <generator class="guid"/>
    </id>
    <natural-id mutable="true">
      <property name="Description" column="Description" not-null="true" length="25"/>
    </natural-id>
    <set name="Channels" table="channel_flags" lazy="extra" access="nosetter.camelcase-underscore" inverse="true" cascade="all">
      <key unique="true" column="FlagId" not-null="true"/>
      <many-to-many class="Channel" column="ChannelId" />
    </set>
  </class>
</hibernate-mapping>